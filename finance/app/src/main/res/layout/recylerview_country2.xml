<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/constant_country_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/germany"/>

    <TextView
        android:id="@+id/constant_country_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/constant_country_imageview"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:text="11"
        android:textColor="@color/colored"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/equal"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/different_country_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/america"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/different_country_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/different_country_imageview"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:text="12"
            android:textColor="@color/colorgreen"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>